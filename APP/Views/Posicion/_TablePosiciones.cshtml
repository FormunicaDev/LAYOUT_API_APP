@{
}

<table id="tblPosicion" class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>POSICION</th>
            <th>DESCRIPCION</th>
            <th>BODEGA</th>
            <th>ACCION</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var posiciones in Model)
        {
            <tr>
                <td>@posiciones.intIdPosicion</td>
                <td>@posiciones.strPosicion</td>
                <td>@posiciones.strDescripcion</td>
                <td>@posiciones.strCodSucursal</td>
                <td><a asp-action="Edit" asp-route-id="@EncryptionService.Encrypt(posiciones.intIdPosicion.ToString())" style="color:white" class="btn btn-success btn-sm fa fa-edit"></a>
                    <a style="color:white;"
                       data-id-posicion="@posiciones.intIdPosicion"
                       class="btnImprimirPdf btn btn-primary btn-sm fa fa-print">
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>